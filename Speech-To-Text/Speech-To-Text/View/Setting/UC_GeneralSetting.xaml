<UserControl x:Class="Speech_To_Text.View.Setting.UC_GeneralSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Speech_To_Text.View.Setting"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="384">
    <Grid>
        <StackPanel>
            <CheckBox x:Name="uiStartEnable" IsChecked="True" Content="啟動時開始" Margin="0,6"/>

            <Label Content="預設識辨語言"/>
            <ComboBox x:Name="uiLanguage" Width="200" HorizontalAlignment="Left" Margin="0,6"/>

            <CheckBox x:Name="uiKeepWav" IsChecked="True" Content="保留識辨片段" Margin="0,6"/>
            <CheckBox x:Name="uiDelLeave" IsChecked="True" Content="離開時刪除識辨片段" Margin="0,6"/>
        </StackPanel>
    </Grid>
</UserControl>
