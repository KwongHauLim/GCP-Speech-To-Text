<Window x:Class="Speech_To_Text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Speech_To_Text"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Voice file:" Margin="10,0,0,-4"/>
            <TextBox x:Name="uiFilePath"  Height="26" Margin="10,0,10,10"/>
            <Grid>
                <Button x:Name="btnOpen" Width="120" Height="30" Content="Open"
                Click="btnOpen_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,0"/>
                <Button x:Name="btnTest" Width="120" Height="30" Content="Test"
                Click="btnTest_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0"/>
            </Grid>
        </StackPanel>

        <TextBox Grid.Row="2" x:Name="uiBox" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>
